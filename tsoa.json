{
  "entryFile": "./src/index.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "spec": {
    "outputDirectory": "./src/public",
    "host": "localhost:3001",
    "schemes": [
      "http",
      "https"
    ],
    "basePath": "/api",
    "securityDefinitions": {
      "local": {
        "type": "apikey",
        "name": "connect.sid",
        "in": "cookie"
      }
    },
    "specVersion": 3,
    "specMerging": "recursive",
    "spec": {
      "components": {
        "schemas": {
          "LoginParams": {
            "dataType": "refObject",
            "properties": {
              "email": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "paths": {
        "/login": {
          "post": {
            "operationId": "Login",
            "responses": {
              "200": {
                "description": "Ok",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/Product"
                    }
                  }
                }
              },
              "204": {
                "description": "No content"
              },
              "400": {
                "description": "Bad Request",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/WrappedApiError"
                    }
                  }
                }
              }
            },
            "security": [],
            "parameters": [],
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/LoginParams"
                  }
                }
              }
            }
          }
        },
        "/contract/{id}/file/upload": {
          "post": {
            "consumes": [
              "multipart/form-data"
            ],
            "parameters": [
              {
                "in": "formData",
                "name": "file",
                "required": true,
                "type": "file",
                "description": "The file to upload"
              },
              {
                "in": "formData",
                "name": "name",
                "required": true,
                "type": "string",
                "description": "The name of the new file, as seen in the UI"
              },
              {
                "in": "formData",
                "name": "createdById",
                "required": true,
                "type": "integer",
                "description": "User ID who uploaded this file"
              }
            ]
          }
        },
        "/invoice/{id}/file/upload": {
          "post": {
            "consumes": [
              "multipart/form-data"
            ],
            "parameters": [
              {
                "in": "formData",
                "name": "file",
                "required": true,
                "type": "file",
                "description": "The file to upload"
              },
              {
                "in": "formData",
                "name": "name",
                "required": true,
                "type": "string",
                "description": "The name of the new file, as seen in the UI"
              },
              {
                "in": "formData",
                "name": "createdById",
                "required": true,
                "type": "integer",
                "description": "User ID who uploaded this file"
              }
            ]
          }
        },
        "/product/{id}/file/upload": {
          "post": {
            "consumes": [
              "multipart/form-data"
            ],
            "parameters": [
              {
                "in": "formData",
                "name": "file",
                "required": true,
                "type": "file",
                "description": "The file to upload"
              },
              {
                "in": "formData",
                "name": "name",
                "required": true,
                "type": "string",
                "description": "The name of the new file, as seen in the UI"
              },
              {
                "in": "formData",
                "name": "createdById",
                "required": true,
                "type": "integer",
                "description": "User ID who uploaded this file"
              }
            ]
          }
        }
      }
    }
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "./src",
    "middleware": "express",
    "authenticationModule": "./src/auth/authentication.ts"
  }
}
